{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ task.rank ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ task.type }}</td>
            </tr>
            <tr>
                <th>Estimé</th>
                <td>{{ task.estimated }}</td>
            </tr>
            <tr>
                <th>Créé</th>
                <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié</th>
                <td>{{ task.updatedAt ? task.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('task_index') }}">Retour à la liste</a>

    <a href="{{ path('task_edit', {'id': task.id}) }}">Editer</a>

    {{ include('task/_soft_delete_form.html.twig') }}
    {% if task.deletedAt is not null %}
        {{ include('task/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
